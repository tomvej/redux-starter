{
  "name": "redux-starter",
  "version": "1.0.0",
  "description": "Personal starter pack for redux applications.",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomvej/redux-starter.git"
  },
  "scripts": {
    "start": "webpack-dev-server -d --inline --hot --env.dev --progress",
    "prebuild": "npm run lint:base && npm run test && rimraf dist/*",
    "build": "webpack --progress --env",
    "lint:base": "eslint src tools",
    "lint": "npm run lint:base -- --fix",
    "test:base": "mocha --compilers js:babel-register tools/test.js src/**/*.spec.js tools/**/*.spec.js",
    "test": "npm run test:base -- --reporter spec",
    "test:watch": "npm run test:base -- --reporter min --watch"
  },
  "author": "tom.vejpustek@centrum.cz",
  "license": "GPL-3.0",
  "dependencies": {
    "immutable": "^3.8.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-immutable": "^3.0.8",
    "redux-saga": "^0.13.0",
    "react-hot-loader": "^3.0.0-beta.6"
  },
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.10",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.0",
    "chai-immutable": "^1.6.0",
    "css-loader": "^0.25.0",
    "dirty-chai": "^1.2.2",
    "enzyme": "^2.5.1",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "html-webpack-plugin": "^2.24.1",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.10"
  }
}
